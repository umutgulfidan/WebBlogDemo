@model IEnumerable<Comment>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@* 
<td><a href="#"><i class="fa fa-check text-navy"></i></a></td>
 *@
<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox ">
				<div class="ibox-title">
					<h5>Yorumlar</h5>
				</div>
				<div class="ibox-content">

					<table class="table table-hover">
						<thead>
							<tr>
								<th>#</th>
								<th>Kullanıcı</th>
								<th>Başlık</th>
								<th>Blog</th>
								<th>Puan</th>
								<th>Tarih</th>
								<th>Durum</th>
								<th class="text-center">Aktif/Deaktif Et</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.CommentID</td>
									<td>@item.CommentUserName</td>
									<td>@item.CommentTitle</td>
									<td>@item.Blog.BlogTitle</td>
									@{
										if (item.BlogScore < 4)
										{
											<td class="text-danger"> <i class="fa fa-level-down"></i> @item.BlogScore </td>
										}
										else if (item.BlogScore < 7)
										{
											<td class="text-warning"> <i class="fa fa-arrow-right"></i> @item.BlogScore </td>
										}
										else
										{
											<td class="text-navy"> <i class="fa fa-level-up"></i> @item.BlogScore </td>
										}
									}
									<td>@item.CommentDate.ToString("dd MMM yyyy")</td>
									@if (item.CommentStatus == true)
									{
										<td><span style="background-color:limegreen;border:none;" class="badge badge-primary">Aktif</span></td>
										<td class="text-center"><a href="/Admin/Comment/DeactivateComment/@item.CommentID" class="btn btn-danger">Deaktif Et</a></td>
									}
									else
									{
										<td><span style="background-color:indianred;border:none;" class="badge badge-primary">Deaktif</span></td>
										<td class="text-center"><a href="/Admin/Comment/ActivateComment/@item.CommentID" class="btn btn-primary">Aktif Et</a></td>
									}
								</tr>
							}

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

</div>
