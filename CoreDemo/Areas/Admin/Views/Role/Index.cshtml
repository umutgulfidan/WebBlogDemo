@model IEnumerable<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox ">
				<div class="ibox-title">
					<h5>Yorumlar</h5>
				</div>
				<div class="ibox-content">

					<table class="table table-hover">
						<thead>
							<tr>
								<th>#</th>
								<th>Rol Adı</th>
								<th class="text-center">Sil</th>
								<th class="text-center">Düzenle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.Id</td>
									<td>@item.Name</td>
									<td class="text-center text-white"><a href="/Admin/Role/DeleteRole/@item.Id/" class="btn btn-danger">Sil</a></td>
									<td class="text-center"><a href="/Admin/Role/UpdateRole/@item.Id/" class="btn btn-primary">Güncelle</a></td>
								</tr>
							}

						</tbody>
					</table>

					<a href="/Admin/Role/AddRole/" class="btn btn-info">Yeni Rol Ekle</a>
				</div>
			</div>
		</div>
	</div>

</div>