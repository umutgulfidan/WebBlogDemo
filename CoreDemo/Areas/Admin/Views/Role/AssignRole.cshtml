@model List<RoleAssignViewModel>
@{
	ViewData["Title"] = "AssignRole";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input" />
            <label for="Exists_@i">@Model[i].Name</label>
        </div>
    }
    <br />
    <input type="submit" class="btn btn-info" value="Değişiklikleri Kaydet">
</form>

<br />
<a href="/Admin/Role/UserRoleList/" class="btn btn-primary">Kullanıcı Listesine Dön</a>