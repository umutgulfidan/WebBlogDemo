@using CoreDemo.Areas.Admin.Models
@model RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Rol Düzenleme Sayfası</h1>
<form method="post">

    <input type="hidden" asp-for="Id" class="form-control" />

    <div class="form-group">
        <label>Rol Başlığı</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group text-danger" asp-validation-summary="All">

    </div>
    <button class="btn btn-success">Rolü Güncelle</button>
</form>

