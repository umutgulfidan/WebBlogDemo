@model UserUpdateViewModel
@{
	ViewData["Title"] = "WriterEditProfile";
	Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Düzenleme Sayfası</h4>
            <p class="card-description"> Aşağıdaki formu doldurarak profilinizde düzenlemeler yapabilirsiniz </p>

            <form class="forms-sample" method="post" asp-action="WriterEditProfile" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="exampleInputName1">Ad Soyad</label>
                    <input type="text" class="form-control" asp-for="NameSurname">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adı</label>
                    <input type="text" class="form-control" asp-for="UserName">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresi</label>
                    <input type="email" class="form-control" asp-for="Mail">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                    <input type="password" class="form-control" asp-for="Password">
                </div>

                <div class="form-group">
                    <label>Profil Görseli</label>
                    <input id="fileInput" type="file" name="file" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input id="imageLabel" type="text" class="form-control file-upload-info" disabled placeholder="Resim Seçilmedi">
                        <span class="input-group-append">
                            <button id="uploadBtn" class="file-upload-browse btn btn-gradient-primary" type="button">Resim Seç</button>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Hakkınızda</label>
                    <textarea class="form-control" id="exampleTextarea1" rows="15" asp-for="About"></textarea>
                </div>

                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button asp-action="Index" asp-controller="Dashboard" class="btn btn-light">İptal Et</button>

            </form>



        </div>
    </div>
</div>

