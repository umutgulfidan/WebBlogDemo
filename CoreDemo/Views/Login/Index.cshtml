@model UserSignInViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Oturum Aç</h3>
		<div class="row inner-sec">
			<div class="login p-5 bg-light mx-auto mw-200">
				<form method="post" asp-action="Index" asp-controller="Login">
					<div class="form-group">
						<label for="exampleInputEmail1 mb-2">Kullanıcı Adı</label>
						<input type="text" class="form-control" placeholder="" required="" asp-for="UserName">
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1 mb-2">Şifre</label>
						<input type="password" class="form-control" placeholder="" required="" asp-for="Password">
					</div>
					<div class="form-check mb-2">
						<input type="checkbox" class="form-check-input" id="exampleCheck1">
						<label class="form-check-label" for="exampleCheck1">Beni Hatırla</label>
					</div>
					<button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
					<p><a href="Register/Index/">Bir hesabınız yok mu?</a></p>
				</form>
			</div>
		</div>
	</div>
</section>