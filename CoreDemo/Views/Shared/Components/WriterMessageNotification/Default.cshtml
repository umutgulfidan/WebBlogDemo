@model IEnumerable<Message>
@using CoreDemo.Models

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
	<h6 class="p-3 mb-0">Mesajlar</h6>
	<div class="dropdown-divider"></div>
	@foreach(var item in Model){
		<a class="dropdown-item preview-item" href="/Message/MessageDetails/@item.MessageID">
			<div class="preview-thumbnail">
				@{
					if (item.Sender.ImageUrl == null)
					{
						<img src="~/WriterImagesFolder/DefaultWriter.png" class="profile-pic" alt="image">
					}
					else
					{
						<img src="~/WriterImagesFolder/@item.Sender.ImageUrl" class="profile-pic" alt="image">
					}
				}
			</div>
			<div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
				<h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.Sender.NameSurname sana bir mesaj gönderdi.</h6>
					<p class="text-gray mb-0">@TimeHelper.CalcDifference(item.MessageDate)</p>

			</div>
		</a>
	}
	<div class="dropdown-divider"></div>
	<h6 class="p-3 mb-0 text-center"><a href="/Message/InBox">Gelen Kutusunu Görüntüle</a></h6>
</div>
