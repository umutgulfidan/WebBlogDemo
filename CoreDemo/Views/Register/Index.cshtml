@model EntityLayer.Concrete.Writer
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/UserLayout.cshtml";
}



<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Yazar Kayıt Sayfası</h3>
		<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				@using (Html.BeginForm("Index", "Register", FormMethod.Post, new { id = "registerForm", enctype = "multipart/form-data" }))
				{

					<div class="form-row">
						<div class="col-md-6 mb-3">
							<label for="validationCustom01">Adınız Soyadınız</label>
							@Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
							@Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger" })
						</div>
						<div class="col-md-6 mb-3">
							<label for="validationCustom02">Mail Adresi</label>
							@Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
							@Html.ValidationMessageFor(x => x.WriterMail, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="exampleInputPassword1 mb-2">Şifre</label>
							@Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control", id = "password" })
							@Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
						</div>
						<div class="form-group col-md-6">
							<label for="exampleInputPassword1 mb-2">Şifre Tekrar</label>
							<input type="text" id="passwordConfirm" class="form-control" />
							<span id="passwordError" class="text-danger" style="display: none;">Şifreler uyuşmuyor!</span>
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-12">
							<label for="formFile" class="form-label">Profil Resmi Seçiniz</label>
							<input class="form-control" type="file" id="formFile" name="file">
							@Html.ValidationMessageFor(x => x.WriterImage, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-12">
							@Html.LabelFor(x=>x.WriterAbout)
							@Html.TextAreaFor(x=>x.WriterAbout,8,3, new {@class="form-control"})
							@Html.ValidationMessageFor(x => x.WriterAbout, "", new { @class = "text-danger" })
						</div>
					</div>
						<button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
						<p>
							<a href="#" id="btn1">'Kayıt Ol' Butonuna basarak tüm kuralları okuyup kabul  sayılırsınız..</a>
						</p>

				}

			</div>
		</div>
	</div>
</section>

<script>
	document.addEventListener("DOMContentLoaded", function() {
		var form = document.getElementById("registerForm");

		form.addEventListener("submit", function(event) {
			// Şifre ve şifre tekrar alanlarının değerlerini alıyoruz
			var password = document.getElementById("password").value;
			var passwordConfirm = document.getElementById("passwordConfirm").value;

			// Eğer şifreler uyuşmuyorsa formun gönderilmesini durduruyoruz
			if (password !== passwordConfirm) {
				event.preventDefault(); // Form gönderimini iptal eder
				document.getElementById("passwordError").style.display = "block";
			} else {
				// Eşleşiyorsa hata mesajını gizleyip formu gönderiyoruz
				document.getElementById("passwordError").style.display = "none";
			}
		});
	});
</script>

<script>
		document.getElementById("btn1").onclick = function() {
			Swal.fire({
				title: "Kullanım Şartları",
				html: `
					<div style="margin:15px;font-size:smaller">
							<p>Bu web sitesine üye olarak, aşağıdaki kullanım şartlarını kabul etmiş sayılırsınız. Lütfen şartları dikkatlice okuyun.</p><br/>

						<ul>
							<li><strong>1. Üyelik ve Hesap Güvenliği:</strong> Siteye üye olmak için doğru ve güncel bilgi sağlamanız gerekmektedir. Üyeliğinizle ilgili herhangi bir değişiklik durumunda bu bilgileri güncellemekle yükümlüsünüz. Hesabınızın güvenliği için şifrenizi kimseyle paylaşmamanız önemlidir. Hesabınızda gerçekleşebilecek her türlü etkinlikten siz sorumlusunuz.</li><br/>
							<li><strong>2. Yasaklı İçerikler:</strong> Sitemizde, ırkçılık, cinsiyetçilik, şiddet, nefret söylemi içeren veya yasadışı içerikler yayınlamak yasaktır. Herhangi bir yasadışı veya zararlı içerik paylaşmanız durumunda üyeliğiniz askıya alınabilir ve yasal işlemler başlatılabilir.</li><br/>
							<li><strong>3. Fikri Mülkiyet Hakları:</strong> Sitede yer alan içerikler, yazılar, görseller ve diğer materyaller telif hakkıyla korunmaktadır. Bu içerikleri izinsiz kullanmak yasaktır. Kendi içeriklerinizi siteye yüklerken, bu içeriklerin size ait olduğundan veya kullanma hakkınız olduğundan emin olmalısınız.</li><br/>
							<li><strong>4. Kullanıcı Davranışları:</strong> Diğer kullanıcılarla saygılı bir şekilde iletişim kurmanız beklenir. Hakaret, tehdit veya olumsuz davranışlar siteye girişinizi engelleyebilir. Siteyi sadece yasal ve etik amaçlar için kullanmanız gerekmektedir.</li><br/>
							<li><strong>5. Veri Koruma ve Gizlilik:</strong> Kişisel verileriniz, Gizlilik Politikamız’a uygun olarak toplanır ve saklanır. Üyelik esnasında verdiğiniz bilgiler yalnızca belirtilen amaçlarla kullanılacaktır. Gizliliğinizin ihlal edilmemesi için gereken tüm tedbirler alınmakla birlikte, üçüncü taraflarca yapılabilecek veri ihlallerinden site sorumlu değildir.</li><br/>
							<li><strong>6. Değişiklikler:</strong> Bu kullanım şartları zaman zaman güncellenebilir. Güncellenmiş şartlar, site üzerinde yayımlandığı tarihten itibaren geçerli olacaktır. Kullanıcılar, siteyi kullanmaya devam ederek güncel şartları kabul etmiş sayılır.</li><br/>
							<li><strong>7. Hizmetin Durdurulması:</strong> Site yönetimi, herhangi bir zamanda üyelik iptali veya hizmetlerin geçici veya kalıcı olarak durdurulmasına karar verebilir.</li>
						</ul>
					</div>`
	,
				icon: "question",
				confirmButtonText: `
				<i class="fa fa-thumbs-up"></i> Anladım!
				`
			});
		};
</script>

