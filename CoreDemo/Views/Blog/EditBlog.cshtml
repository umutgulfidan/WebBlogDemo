@model Blog
@{
	ViewData["Title"] = "EditBlog";
	Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h1>Blog Düzenleme Sayfası</h1>
			<br />
			@using (Html.BeginForm("EditBlog", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
			{
				@Html.HiddenFor(x => x.BlogID)
				@Html.HiddenFor(x => x.BlogStatus)
				@Html.HiddenFor(x => x.WriterID)
				@Html.HiddenFor(x => x.BlogCreateDate)
				<br />
				@Html.Label("Blog Başlığı")
				@Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
				@Html.ValidationMessageFor(x => x.BlogTitle, "", new { @class = "text-danger" })
				<br />
				<div class="form-group">
					<label>Blog Kapak Görseli</label>
					<input id="fileInput" type="file" name="BlogThumbnailImage" class="file-upload-default">
					<div class="input-group col-xs-12">
						<input id="imageLabel" type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
						<span class="input-group-append">
							<button id="uploadBtn" class="file-upload-browse btn btn-gradient-primary" type="button">Resim Seç</button>
						</span>
					</div>
					@Html.ValidationMessageFor(x => x.BlogThumbnailImage, "", new { @class = "text-danger" })
				</div>
				<br />
				<div class="form-group">
					<label>Blog Detay Görseli</label>
					<input id="fileInput" type="file" name="BlogImage" class="file-upload-default">
					<div class="input-group col-xs-12">
						<input id="imageLabel" type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
						<span class="input-group-append">
							<button id="uploadBtn" class="file-upload-browse btn btn-gradient-primary" type="button">Resim Seç</button>
						</span>
					</div>
					@Html.ValidationMessageFor(x => x.BlogImage, "", new { @class = "text-danger" })
				</div>
				<br />
				@Html.Label("Kategori")
				@Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.cv, new { @class = "form-control" })
				@Html.ValidationMessageFor(x => x.CategoryID, "", new { @class = "text-danger" })
				<br />
				@Html.Label("Blog İçeriği")
				@Html.TextAreaFor(x => x.BlogContent, 25, 3, new { @class = "form-control" })
				@Html.ValidationMessageFor(x => x.BlogContent, "", new { @class = "text-danger" })
				<br />
				<input class="btn btn-success" type="submit" value="Bloğu Kaydet">
			}
		</div>
	</div>
</div>
